{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "permissions": ["storage", "activeTab", "{{firefox}}.*://*.youtube.com/*"],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup/index.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/contentScript/index.ts"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "roman@lerchster.dev"
    }
  }
}
